<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="addressNameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="addressNameTextField"
                    placeholder="Enter your Name"
                    name="name" 
                    value="<%= name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="addressNumberField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="addressNumberField"
                    placeholder="Enter your Contact Number"
                    name="number" 
                    value="<%= number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="addressemailField">Email</label>
                    <input type="email" class="form-control"
                    id="addressemailField"
                    placeholder="Enter your email address"
                    name="email" 
                    value="<%= email %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/business-contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>