
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1> class="text-center>Update Address</h1>
                <form class="form" method="POST">
                    <div class="form-group">
                        <label for=""> Name </label>
                        <input type="text"
                        name="name"
                        class="form-control"
                        id="nameTextField"
                        placeholder="Enter your name"
                        value="<%= inform.name %>"
                        required> 
                    </div>>
 

                    <div class="form-group">
                        <label for=""> Contact Number </label>
                        <input type="text"
                        name="number"
                        class="form-control"
                        id="numberTextField"
                        placeholder="Enter contact number"
                        value="<%= inform.number %>"
                        required> 
                    </div>>


                    <div class="form-group">
                        <label for=""> Email Address </label>
                        <input type="text"
                        name="email"
                        class="form-control"
                        id="emailTextField"
                        placeholder="Enter email address"
                        value="<%= inform.email %>"
                        required> 
                    </div>>

                    <label><button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"> Submit</i>
                    </button></label>
                    <label><a href="addresslist" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel </a></label>

                </form>
        </div>
    </div>
</div>

